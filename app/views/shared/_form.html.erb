<section id='custom-form'>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<%= form_for @blog do |f| %>
					<div class="form-group">
						<%= f.label :title %>
						<%= f.text_field :title, class: "form-control" %>
					</div>
	
					<div class="form-group">
						<%= f.label :body %>
						<%= f.text_area :body, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.submit :submit, class: "btn btn-success" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>